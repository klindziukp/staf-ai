<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Petstore API Test Suite" parallel="methods" thread-count="3" verbose="1">
    
    <listeners>
        <listener class-name="com.petstore.automation.listener.TestSuiteListener"/>
        <listener class-name="com.petstore.automation.listener.TestMethodCaptureListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Pet API Tests" preserve-order="true">
        <classes>
            <class name="com.petstore.automation.tests.ListPetsTest"/>
            <class name="com.petstore.automation.tests.CreatePetTest"/>
            <class name="com.petstore.automation.tests.GetPetByIdTest"/>
        </classes>
    </test>

    <test name="Integration Tests" preserve-order="true">
        <classes>
            <class name="com.petstore.automation.tests.IntegrationTest"/>
        </classes>
    </test>

</suite>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Petstore API Test Suite" parallel="methods" thread-count="3" verbose="1">
    
    <listeners>
        <listener class-name="com.petstore.listeners.TestSuiteListener"/>
    </listeners>
    
    <test name="Get Pets Tests" preserve-order="true">
        <classes>
            <class name="com.petstore.tests.GetPetsTests"/>
        </classes>
    </test>
    
    <test name="Create Pet Tests" preserve-order="true">
        <classes>
            <class name="com.petstore.tests.CreatePetTests"/>
        </classes>
    </test>
    
    <test name="Get Pet By ID Tests" preserve-order="true">
        <classes>
            <class name="com.petstore.tests.GetPetByIdTests"/>
        </classes>
    </test>
    
</suite>

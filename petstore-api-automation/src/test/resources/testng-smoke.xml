<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Petstore API Smoke Test Suite" parallel="false" verbose="1">
    
    <listeners>
        <listener class-name="com.petstore.listeners.TestSuiteListener"/>
    </listeners>
    
    <test name="Smoke Tests" preserve-order="true">
        <classes>
            <class name="com.petstore.tests.GetPetsTests">
                <methods>
                    <include name="testGetAllPetsWithoutLimit"/>
                    <include name="testGetPetsWithValidLimit"/>
                </methods>
            </class>
            <class name="com.petstore.tests.CreatePetTests">
                <methods>
                    <include name="testCreatePetWithRequiredFields"/>
                    <include name="testCreatePetWithAllFields"/>
                </methods>
            </class>
            <class name="com.petstore.tests.GetPetByIdTests">
                <methods>
                    <include name="testGetPetByValidId"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>

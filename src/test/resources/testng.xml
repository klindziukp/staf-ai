<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Tic Tac Toe API Test Suite" parallel="methods" thread-count="3" verbose="1">
    <test name="Board Management Tests">
        <classes>
            <class name="com.tictactoe.api.tests.board.GetBoardTests"/>
            <class name="com.tictactoe.api.tests.board.GetSquareTests"/>
            <class name="com.tictactoe.api.tests.board.PutSquareTests"/>
        </classes>
    </test>

    <test name="Game Logic Tests">
        <classes>
            <class name="com.tictactoe.api.tests.gameplay.GameLogicTests"/>
        </classes>
    </test>

    <test name="Security Tests">
        <classes>
            <class name="com.tictactoe.api.tests.security.AuthenticationTests"/>
        </classes>
    </test>
</suite>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="USPTO Data Set API Test Suite" parallel="tests" thread-count="2" verbose="1">
    
    <listeners>
        <listener class-name="com.staf.uspto.listener.TestSuiteListener"/>
        <listener class-name="com.staf.uspto.listener.TestMethodCaptureListener"/>
    </listeners>
    
    <test name="Apache HTTP Client - DataSet Tests" preserve-order="true">
        <classes>
            <class name="com.staf.uspto.test.apachehttp.ApacheHttpDataSetTest"/>
        </classes>
    </test>
    
    <test name="Apache HTTP Client - Search Tests" preserve-order="true">
        <classes>
            <class name="com.staf.uspto.test.apachehttp.ApacheHttpSearchTest"/>
        </classes>
    </test>
    
    <test name="Retrofit - DataSet Tests" preserve-order="true">
        <classes>
            <class name="com.staf.uspto.test.retrofit.RetrofitDataSetTest"/>
        </classes>
    </test>
    
    <test name="Retrofit - Search Tests" preserve-order="true">
        <classes>
            <class name="com.staf.uspto.test.retrofit.RetrofitSearchTest"/>
        </classes>
    </test>
    
</suite>
